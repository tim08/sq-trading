<%= form_with(model: product_item, local: true) do |form| %>
  <% if product_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product_item.errors.count, "error") %> prohibited this product_item from being saved:</h2>

      <ul>
      <% product_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :player_id %>
    <%= form.select :player_id, Player.all.collect {|x| [x.nickname, x.id]} %>
  </div>

  <div class="field">
    <%= form.label :product_id %>
    <%= form.select :product_id, Product.all.collect {|x| [x.name, x.id]} %>
  </div>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number, id: :product_item_number %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
