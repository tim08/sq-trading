<p id="notice"><%= notice %></p>

<h1>ADV board</h1>

<table>
  <thead>
  <tr>
    <th>Player</th>
    <th>Product</th>
    <th>Number</th>
    <th>Price</th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
  <% @product_items.each do |product_item| %>
    <tr>
      <td><%= product_item.player.nickname %></td>
      <td><%= product_item.product.name %></td>
      <td><%= product_item.number %></td>
      <td><%= product_item.price %></td>
      <td><%= link_to 'Buy', buy_product_item_path(product_item), :method => :put %></td>
    </tr>
  <% end %>
  </tbody>
</table>

